<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card shadow">
      <div class="card-header bg-success text-white">
        <h4 class="mb-0">Yeni Doktor Ekle</h4>
      </div>
      <div class="card-body">
        <%= form_with(model: [:admin, @doctor], url: admin_doctors_path, local: true) do |form| %>
          <% if @doctor.errors.any? %>
            <div class="alert alert-danger">
              <h4><%= pluralize(@doctor.errors.count, "error") %> prohibited this doctor from being saved:</h4>
              <ul>
                <% @doctor.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= form.label :name, 'İsim Soyisim', class: 'form-label' %>
            <%= form.text_field :name, class: 'form-control', required: true %>
          </div>

          <div class="mb-3">
            <%= form.label :email, 'Email Adresi', class: 'form-label' %>
            <%= form.email_field :email, class: 'form-control', required: true %>
          </div>

          <%= form.fields_for :doctor_profile do |profile_form| %>
            <div class="mb-3">
              <%= profile_form.label :department_id, 'Branş', class: 'form-label' %>
              <%= profile_form.collection_select :department_id, Department.all, :id, :name, { prompt: 'Branş Seçiniz' }, { class: 'form-select', required: true } %>
            </div>

            <div class="mb-3">
              <%= profile_form.label :room_number, 'Oda Numarası', class: 'form-label' %>
              <%= profile_form.text_field :room_number, class: 'form-control' %>
            </div>

            <div class="mb-3">
              <%= profile_form.label :bio, 'Biyografi', class: 'form-label' %>
              <%= profile_form.text_area :bio, class: 'form-control', rows: 3 %>
            </div>
          <% end %>

          <div class="d-grid gap-2">
            <%= form.submit 'Doktor Ekle', class: 'btn btn-success' %>
            <%= link_to 'Geri Dön', admin_doctors_path, class: 'btn btn-outline-secondary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
